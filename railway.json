{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
          "providers": ["python", "staticfile", "node"],
          "phases": {
              "setup": {
                  "nixPkgs": ["...", "nodejs"]
              }
          }
      },
      "buildCommand": "npm ci"
    },
    "deploy": {
      "startCommand": "cd uxersii && npm install && npm run build && cd .. && python manage.py migrate && python manage.py collectstatic && gunicorn uxersiiDjango.wsgi",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }