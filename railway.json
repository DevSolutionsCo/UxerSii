{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
          "providers": ["python", "nodejs", "staticfile"],
          "phases": {
              "setup": {
                  "nixPkgs": ["...", "nodejs"]
              }
          }
      },
      "buildCommand": "npm ci && pip install -r requirements.txt"
    },
    "deploy": {
      "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn uxersiiDjango.wsgi",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  